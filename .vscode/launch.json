{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: main.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "React: Chrome Debug",
      "url": "http://localhost:3000", // Next.js 默认端口
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
